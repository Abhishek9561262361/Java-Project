<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        <bean class="com.jspiders.spring_core.beans.SportsBean" name="sport1">
        <property name="id" value="1"/>
        <property name="name" value="cricket"/>
        <property name="players" value="11"/>
        <property name="academy" ref="academy1"/>
        </bean>
        <bean class="com.jspiders.spring_core.beans.SportsBean" name="sport2">
        <property name="id" value="2"/>
        <property name="name" value="football"/>
        <property name="players" value="15"/>
        <property name="academy" ref="academy1"/>
        </bean>
        <bean class="com.jspiders.spring_core.beans.AcademyBean" name="academy1">
        <property name="id" value="1"/>
        <property name="name" value="Shivaji academy"/>
        <property name="city" value="solapur"/>
        </bean>
</beans>